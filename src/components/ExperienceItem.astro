---
interface Props {
  title: string
  description: string
  link?: string
  date: string
} 
const { title, description, link, date } = Astro.props
---
 
<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:white"></div>
<time class="mb-1 text-sm font-normal leading-none text-red-200/90">{date}</time>
    <h3 class="text-lg font-semibold text-yellow-200/90 mt-2">{title}</h3>
    <p class="mb-4 text-base font-normal text-gray-200 text-pretty">{description}</p>

    {
      link && (
    <a href={link} target="_blank" class="inline-flex rounded-full border dark:border-white/40 border-white/40 
        justify-center items-center 
        gap-x-2 py-1 px-2 lg:py-2 lg:px-4
        text-sm lg:text-base
        text-white dark:text-white
        bg-white/10 dark:bg-white/10
        hover:bg-white/20 dark:hover:bg-white/20 hover:scale-110
        transition duration-300 ease-in-out ">
      Reference Letter <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
    </svg></a>
 
      )
      }
  